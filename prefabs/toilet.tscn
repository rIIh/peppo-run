	vec2 xy = (UV - vec2(0.5)) * 2.0;
    
    float angle = 3.1415;
    float x2 = xy.x * cos( angle ) + xy.y * sin( angle );
    float y2 = xy.y * cos( angle ) - xy.x * sin( angle );
	
	float dist = distance(vec2(0.0), vec2(x2, y2));
    
    if (dist <= 1.0)
    {
        COLOR = circle_color;
    }
    else
    {
     	COLOR = vec4(0.0);   
    }
}

